<!DOCTYPE html>
<html>
  <head>
    <title>Videotube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <a href="./" class="navbar-brand">
        <%= fa_icon "youtube-play", class: "text-danger mr-1" %>
        VideoTube
      </a>
      <div>
        <% if current_user %>
        
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-danger" %>
          <%= link_to "会員登録", new_user_registration_path, class: "btn btn-danger" %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
