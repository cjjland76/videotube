<%= video_tag @video.file.url, controls: true, class: "w-100" if @video.file? %>
<h4><%= @video.title %>
</h4>
<br>
投稿者:　<%= @video.user.nickname %>
<%= simple_format @video.description %>
View count:　<%= @video.view_count.to_i %>
</p>
<% if current_user && (@video.user == current_user) %>
<%= link_to '編集', edit_video_path(@video), class: "btn btn-danger" %> |
<%= link_to '削除', @video, method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-outline-danger" %> |
<%= link_to '一覧', videos_path, class: "btn btn-danger" %>
<% else %>
<%= link_to '一覧', videos_path, class: "btn btn-danger" %>
<% end %>
<br><br><br>

<div>
  <% if @comments %>
    <% @comments.each do |comment| %>
        <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
        <%= comment.text %>
    <div class="text-black-50">
      <span class="font-italic"><%= time_ago_in_words comment.created_at %></span>
    　　 <%= link_to "削除", video_comment_path(comment.id), method: :delete %><br><br>
    </div>
    <% end %>
  <% end %> 
</div>

<div class="form-group">
  <% if current_user %>
    <%= form_with(model: [@video, @comment], local: true) do |form| %>
      <%= form.text_area :text, placeholder: "コメントする", rows: "2", class: "form-control mb-2"%>
      <%= form.submit "コメント", class: "btn btn-danger" %>
    <% end %>
  <% else %>
    <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
  <% end %>
</div>
